+#!/usr/bin/ruby
+
+require 'fileutils'
+require 'open-uri'
+
+FROM_QT5_VERSION_MAJOR = "5.12"
+FROM_QT5_VERSION_MINOR = ".2"
+FROM_QT5_VERSION = FROM_QT5_VERSION_MAJOR + FROM_QT5_VERSION_MINOR
+
+QT5_VERSION_MAJOR = "5.13"
+QT5_VERSION_MINOR = ".0"
+QT5_VERSION = QT5_VERSION_MAJOR + QT5_VERSION_MINOR
+
+def replace_in_file(file_name, from, to)
+  text = File.read(file_name)
+
+  puts from
+  puts to
+
+  new_contents = text.gsub(from, to)
+
+  # To merely print the contents of the file, use:
+  puts new_contents
+
+  # To write changes to the file, use:
+  File.open(file_name, "w") {|file| file.puts new_contents }
+end
+
+def patch_base
+  from = %{
+QT5_VERSION_MAJOR = #{FROM_QT5_VERSION_MAJOR}
+QT5_VERSION = $(QT5_VERSION_MAJOR)#{FROM_QT5_VERSION_MINOR}
+  }.strip
+
+  to = %{
+QT5_VERSION_MAJOR = #{QT5_VERSION_MAJOR}
+QT5_VERSION = $(QT5_VERSION_MAJOR)#{QT5_VERSION_MINOR}
+  }.strip
+
+  replace_in_file("qt5.mk", from, to)
+end
+
+def patch_base_hash
+  FileUtils.cp_r("qt5base/#{FROM_QT5_VERSION}", "qt5base/#{QT5_VERSION}")
+end
+
+def get_url(el)
+  el = el.split("/")[0].gsub("qt5", "qt")
+  url = "http://download.qt.io/official_releases/qt/#{QT5_VERSION_MAJOR}/#{QT5_VERSION}/submodules/#{el}-everywhere-src-#{QT5_VERSION}.tar.xz.sha256"
+end
+
+def fetch(url)
+  open(url) do |f|
+    f.read.gsub("  ", " ")
+  end
+end
+
+def patch_hash
+  subs = Dir["*/*.hash"]
+    .reduce([]) { |acc, dir| dir.start_with?("qt5base") || dir.start_with?("qt5enginio") || dir.start_with?("qt5webkit") || dir.start_with?("qt5canvas3d") ? acc : acc + [dir] }
+    .each do |hash_file|
+      url = get_url(hash_file)
+      puts url
+      hash = fetch(url)
+      el = hash_file.split("/")[0].gsub("qt5", "qt")
+      from = /# Hash from: \S+#{FROM_QT5_VERSION.gsub(".", '\.')}\S+\nsha256 \S+ #{el}-everywhere-src-#{FROM_QT5_VERSION}.tar.xz/
+      to = %{
+# Hash from: #{url}
+sha256 #{hash}
+}.strip
+    replace_in_file(hash_file, from, to)
+    end
+end
+
+patch_base
+patch_base_hash
+patch_hash
